<hibernate-configuration>
<session-factory>
    <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/HibernateCodemind</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">Ram@123</property>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
    <property name="show_sql">true</property>
    <!-- <property name="hbm2ddl.auto">update</property> -->
    <!-- in this we should give class name with its package  -->
    <mapping class="com.session1.spring_session_1.Employee" />
    
</session-factory>
</hibernate-configuration>
